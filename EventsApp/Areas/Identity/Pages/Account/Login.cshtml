@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row">
    <div class="col-md-3 text-center" style="margin-inline:auto">
        <section>
            <form id="account" method="post">
                <h1 style="margin:20px"><b>Logowanie</b></h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Login"></label>
                    <input asp-for="Input.Login" class="form-control" />
                    <span asp-validation-for="Input.Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Zaloguj</button>
                </div>
                <div class="form-group">
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

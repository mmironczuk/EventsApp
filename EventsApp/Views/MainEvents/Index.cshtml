@model IEnumerable<EventsApp.Models.MainEvent>

@{
    ViewData["Title"] = "Index";
}
<nav class="navbar navbar-expand-lg navbar-dark  own-nav" style="border-top:solid;border-width:2px; margin:0px; background-color:#777">
    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto" style="">
            <li class="nav-item active"> <a class="nav-link" href="#" data-abc="true">Home <span class="sr-only">(current)</span></a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Muzyka</a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Teatr</a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Religia</a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Nauka</a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Sztuka i kultura</a> </li>
            <li class="nav-item"> <a class="nav-link" href="#" data-abc="true">Sport</a> </li>
        </ul>
        <form onsubmit="event.preventDefault()" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
<div class="MostInterestingEvents text-center">
    <h4 class="text-center">Wydarzenia, które mogą Cię zainteresować</h4>
        <div class="row">
            @foreach (var item in Model)
            {
                <a class="EventLink text-center" asp-controller="MainEvents" asp-action="Details" asp-route-id="@item.MainEventId">
                    <div class="card card-block SingleEvent text-center">
                        <h4 class="card-title mt-3 mb-3">@item.title</h4>
                        @{
                            var base64 = Convert.ToBase64String(item.picture);
                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        <img src='@imgSrc' style="max-width:200px; max-height:200px; margin-inline:auto"/>
                        <p class="card-text">
                            <ul style="list-style-type:none;">
                                <li style="text-align:left"><i class="fa fa-location-arrow" style="font-size:15px"></i>@item.Place.name, @item.Place.city</li>
                                <li style="text-align:left"><i class="fa fa-calendar" style="font-size:15px"></i>@item.dateStart</li>
                            </ul>
                        </p>
                    </div>
                </a>
            }
        </div>
    </div>